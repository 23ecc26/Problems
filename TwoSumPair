for a sorted array, use two pointer one at the begining and another at the end

class Solution {
    int[] twoSum(int arr[], int target) {
        Arrays.sort(arr);
        int i = 0;
        int j = arr.length-1;
        while(i<j) {
            if(arr[i]+arr[j] > target) {
                j--;
            }
            else if(arr[i]+arr[j] < target) {
                i++;
            }
            else {
                return [i,j];
            }
        }
        return [-1,-1];
    }
}
